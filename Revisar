Ej.10
def tienen_elementos_comunes(lista1, lista2):
    # Usamos un conjunto (set) para comprobar la intersección de los dos
    return bool(set(lista1) & set(lista2))

# Ejemplo de uso
lista1 = [1, 2, 3, 4]
lista2 = [4, 5, 6]
print(tienen_elementos_comunes(lista1, lista2))  # Esto devolverá True

lista3 = [1, 2, 3]
lista4 = [5, 6, 7]
print(tienen_elementos_comunes(lista3, lista4))  # Esto devolverá False
///////////////////////////////////
Ej.11
def palabra_mas_larga(lista):
    if not lista:
        return None  # Retorna None si la lista está vacía
    return max(lista, key=len)

# Ejemplo de uso
palabras = ["gato", "elefante", "murciélago", "perro"]
print(palabra_mas_larga(palabras))  # Salida: murciélago
/////////////////////////
Ej.12
def palabras_mas_cortas(lista, n):
    return [palabra for palabra in lista if len(palabra) < n]

# Ejemplo de uso
palabras = ["gato", "elefante", "murciélago", "perro"]
longitud_maxima = 6
resultado = palabras_mas_cortas(palabras, longitud_maxima)
print(resultado)  # Salida: ['gato', 'perro']

            ///////////////////////////
Ej.13
def eliminar_duplicados(lista):
    elementos_unicos = []
    vistos = set()
    
    for elemento in lista:
        if elemento not in vistos:
            elementos_unicos.append(elemento)
            vistos.add(elemento)
    
    return elementos_unicos

# Ejemplo de uso
lista = [1, 2, 3, 2, 4, 1, 5, 6, 3, 7]
resultado = eliminar_duplicados(lista)
print(resultado)  # Salida: [1, 2, 3, 4, 5, 6, 7]
/////////////////////////////////////
Ej.14
def convertir_a_mayusculas():
    while True:
        frase = input("Escribe una frase (o 'SALIR' para terminar): ")
        if frase.upper() == "SALIR":
            print("Programa terminado.")
            break
        print(frase.upper())

# Ejecutar el programa
convertir_a_mayusculas()
