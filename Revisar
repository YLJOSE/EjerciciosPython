Ej.15
def contar_mayusculas(frase):
    return sum(1 for letra in frase if letra.isupper())

# Ejemplo de uso
frase = input("Introduce una frase: ")
num_mayusculas = contar_mayusculas(frase)
print(f"Número de mayúsculas en la frase: {num_mayusculas}")
//////////////////////////////////////////////////
Ej.16
def contar_minusculas(frase):
    return sum(1 for letra in frase if letra.islower())

# Ejemplo de uso
frase = input("Introduce una frase: ")
num_minusculas = contar_minusculas(frase)
print(f"Número de minúsculas en la frase: {num_minusculas}")
