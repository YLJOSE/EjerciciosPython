2.1
def contar_palabras_aw(nombre_archivo):
    try:
        with open(nombre_archivo, 'r', encoding='utf-8') as archivo:
            texto = archivo.read()
            palabras = texto.split()  # Divide el texto en palabras
            
            # Filtrar palabras que comienzan con 'A' o 'W' (mayúsculas o minúsculas)
            contador = sum(1 for palabra in palabras if palabra.startswith(('A', 'a', 'W', 'w')))
        
        return contador
    except FileNotFoundError:
        print("El archivo no se encontró.")
        return None

# Ejemplo de uso
archivo = "texto.txt"  
resultado = contar_palabras_aw(archivo)
if resultado is not None:
    print(f"Número de palabras que empiezan por 'A' o 'W': {resultado}")
